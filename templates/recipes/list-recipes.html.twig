{# templates/blog/list-recipes.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Recipe Listings{% endblock %}

{% block body %}
<div class="recipe_title">Recipe Listings</div>

<div class="search_container">
{# TODO: Add in filters - meals, chefs, tags (these would all need to go into the database, add meta data field #}
<input type="text" placeholder="Search Recipes" id="search_term">
<input type="hidden" id="search_url" value="{{ path('recipe_search') }}">
<button onclick="searchRecipes(search_term.value)">Search Recipes</button>

{# recipe search results replace this block #}
<div id='search_results'>

{% for recipe in recipes %}
    <div class="recipe_links">
    <a href="recipes/{{ recipe.id }}">
      {{ recipe.name }}
    </a>
    </div>
{% endfor %}

</div>

{# currently just adds lasagna recipe #}
<div class="new_recipe_link"><a href="recipes/newrecipe">Add New Recipe...</a></div>

</div>

{% endblock %}
