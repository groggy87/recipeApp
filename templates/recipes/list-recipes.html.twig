{% extends 'base.html.twig' %}
{% block title %}My Recipes{% endblock %}

{% block body %}
<div class="title">My Recipes</div>

<div class="search_container">
{# TODO: Add in filters - meals, chefs, tags (these would all need to go into the database, add meta data field #}
<input type="text" placeholder="Search Recipes" id="search_term" class="form-control">
<input type="hidden" id="search_url" value="{{ path('recipe_search') }}">
<button onclick="searchRecipes(search_term.value)" class="btn btn-primary">Search Recipes</button>

{# recipe search results replace this block #}
<div id='search_results'>
	<div class="recipe_links">
		<ul>
			{% for recipe in recipes %}
				<li>
					<a href="{{ path('recipe_show', {'id': recipe.id}) }}">
						{{ recipe.name }}
					</a>

					<a class="delete" href="{{ path('recipe_delete', {'id': recipe.id}) }}">
						{# add return confirm #}
						<img border="0" alt="x" src="{{ asset('images/delete.png') }}" width="100" height="100">
					</a>
				</li>
			{% endfor %}
		</ul>
	</div>
</div>

{# currently just adds lasagna recipe #}
<div class="new_recipe_link"><a href="recipes/newrecipe">New Recipe...</a></div>

</div>

{% endblock %}
